{% extends "benjBundle:Message:affiche_message.html.twig" %}

{% block message_response %}

    <div class="panel panel-success" data-collapsed="0">

        <!-- panel head -->
        <div class="panel-heading">
            <div class="panel-title">
                <h2>Response</h2>
            </div>
        </div>

        <!-- panel body -->
        <div class="panel-body">
            <div class="col-lg-12">
                <table class="table table-bordered">
                    <tbody>

                        <tr>
                            <td>
                                <h4>Subject</h4>
                            </td>
                            <td>
                                <pre><h3>{{message.messResponseSubject}}</h3></pre>                                         
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <h4>Content</h4>
                            </td>
                            <td>
                                <pre><h3>{{message.messResponseContent}}</h3></pre>                                         
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}

{% block message_button %}

    <div class="col-sm-3 col-sm-offset-3">
        <a href="{{ path('_delete_message', {'id':message.id, 'gender':tab}) }}" class="btn btn-red btn-lg btn-icon icon-left">
            <i class="entypo-cancel"></i>
            Delete this message
        </a>
    </div>

{% endblock %}