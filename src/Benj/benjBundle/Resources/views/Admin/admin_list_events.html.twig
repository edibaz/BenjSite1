{% extends "benjBundle:Admin:admin_default.html.twig" %}

{% block menu_statistics %}{% endblock %}
{% block menu_new_art %}{% endblock %}
{% block menu_list_arts %}{% endblock %}
{% block menu_new_event %}{% endblock %}
{% block menu_list_events %}class = "active"{% endblock %}


{% block container %}

    <div class="row col-md-10 col-lg-offset-1">

        <div class="">

            <div class="panel panel-info" data-collapsed="0">

                <div class="panel-heading">
                    <div class="panel-title">
                        <h2>List of all events</h2>
                    </div>
                </div>

                <div class="panel-body">

                    <form role="form" class="form-horizontal form-groups-bordered">

                        <table class="table table-bordered table-striped datatable" id="table-2">

                            <thead>
                                <tr>
                                    <th><h5>ID</h5></th>
                                    <th><h5>EVENT DATE</h5></th>
                                    <th><h5>EVENT TITLE</h5></th>
                                    <th><h5>EVENT PLACE</h5></th>
                                    <th><h5>EVENT CONTENT</h5></th>
                                    <th><h5>ACTIONS</h5></th>
                                </tr>
                            </thead>
                            <tbody>

                                {% set n = 1 %}
                                {% set num = 1 %}

                                {% for events in eventsList %}

                                    <tr>
                                        <td>{{num}}</td>
                                        <td>{{events.evDate}} at {{events.evMoment}}</td>
                                        <td>{{events.evTitle}}</td>
                                        <td>{{events.evPlace}}</td>
                                        <td>{{events.evContent}}</td>
                                        <td>
                                            <a class="btn btn-info btn-sm btn-icon icon-left" href="{{ path('_admin_manage_read_event', {'id':events.id}) }}">
                                                <i class="entypo-eye"></i>
                                                Read
                                            </a>
                                            <a class="btn btn-red btn-sm btn-icon icon-left" href="{{ path('_admin_pre_delete_event', {'id':events.id}) }}">
                                                <i class="entypo-cancel"></i>
                                                Delete
                                            </a>
                                        </td>
                                    </tr>
                                    {% set n = num %}
                                    {% set num = n+1 %}

                                {% endfor %}
                            </tbody>

                        </table>

                    </form>

                </div>

            </div>

        </div>
    </div>

{% endblock %}
