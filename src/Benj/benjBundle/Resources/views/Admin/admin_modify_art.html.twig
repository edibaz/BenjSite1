{% extends "benjBundle:Admin:admin_art_informations.html.twig" %}

{% block art_informations %}

    <div class="col-md-12">

        <div class="panel panel-info" data-collapsed="0">

            <!-- panel head -->
            <div class="panel-heading">
                <div class="panel-title"><h2>Modify Art</h2></div>
            </div>

            <!-- panel body -->
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <h2>Art Name: {{art_affiche.artName}}</h2>
                        </div>


                        <div class="panel-body">

                            <form role="form" class="form-horizontal form-groups-bordered" method="POST" action="{{path('_admin_save_art', {'id':art_affiche.id})}}">

                                <div class="form-group">
                                    <label class="col-sm-2 control-label" >Category</label>

                                    <div class="col-sm-7">

                                        <select class="selectboxit input-lg" name="modified_art_category" data-native="true" data-text={{art_affiche.artCategory}}>
                                            <option value="Portrait">Portrait</option>
                                            <option value="Life Scene">Life Scene</option>
                                            <option value="Nature">Nature</option>
                                        </select>

                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="field-1" class="col-sm-2 control-label">Production Year</label>

                                    <div class="col-sm-7">
                                        <input type="text" class="form-control input-lg" name="modified_art_year" data-mask="9999" autocomplete="off" value={{art_affiche.artYear}} >
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Art Dimensions</label>

                                    <div class="col-sm-7">
                                        <input type="text" class="form-control input-lg" name="modified_art_dimensions" autocomplete="off" value={{art_affiche.artDimensions}} >
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="field-ta" class="col-sm-2 control-label">Art Style</label>

                                    <div class="col-sm-10">
                                        <textarea class="form-control autogrow input-lg" name="modified_art_comment" autocomplete="off">{{art_affiche.artComment}}</textarea>
                                    </div>
                                </div>

                                <div class="form-group">

                                    <div class="col-sm-3">
                                        <a type="button" href="{{path('_admin_manage_list_arts')}}" class="btn btn-red btn-lg btn-icon icon-left">
                                            <i class="entypo-cancel"></i>
                                            Cancel
                                        </a>
                                    </div>
                                    <div class="col-sm-3 col-sm-offset-6">
                                        <button type="submit" class="btn btn-success btn-lg btn-icon icon-left">
                                            <i class="entypo-check"></i>
                                            Save Changes
                                        </button>
                                    </div>

                                </div>

                            </form>

                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

{% endblock %}