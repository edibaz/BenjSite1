{% extends "benjBundle:Admin:admin_default.html.twig" %}

{% block menu_statistics %}{% endblock %}
{% block menu_new_art %}{% endblock %}
{% block menu_list_arts %}class = "active"{% endblock %}
{% block menu_new_event %}{% endblock %}
{% block menu_list_events %}{% endblock %}


{% block container %}

    <div class="row col-md-10 col-lg-offset-1">

        <div class="">

            <div class="panel panel-info" data-collapsed="0">

                <div class="panel-heading">
                    <div class="panel-title">
                        <h2>List of all managed arts</h2>
                    </div>
                </div>

                <div class="panel-body">

                    <form role="form" class="form-horizontal form-groups-bordered">

                        <table class="table table-bordered table-striped datatable" id="table-2">

                            <thead>
                                <tr>
                                    <th><h5>ID</h5></th>
                                    <th><h5>ART NAME</h5></th>
                                    <th><h5>CATEGORY</h5></th>
                                    <th><h5>YEAR</h5></th>
                                    <th><h5>COMMENT</h5></th>
                                    <th><h5>ACTIONS</h5></th>
                                </tr>
                            </thead>
                            <tbody>

                                {% set n = 1 %}
                                {% set num = 1 %}

                                {% for arts in artList %}

                                    <tr>
                                        <td>{{num}}</td>
                                        <td>{{arts.artName}}</td>
                                        <td>{{arts.artCategory}}</td>
                                        <td>{{arts.artYear}}</td>
                                        <td>{{arts.artComment[:40]}}</td>
                                        <td>
                                            <a class="btn btn-info btn-sm btn-icon icon-left" href="{{ path('_admin_manage_art', {'id':arts.id}) }}">
                                                <i class="entypo-eye"></i>
                                                Read
                                            </a>
                                            <a class="btn btn-red btn-sm btn-icon icon-left" href="">
                                                <i class="entypo-cancel"></i>
                                                Delete
                                            </a>
                                        </td>
                                    </tr>
                                    {% set n = num %}
                                    {% set num = n+1 %}

                                {% endfor %}
                            </tbody>

                        </table>

                    </form>

                </div>

            </div>

        </div>
    </div>

{% endblock %}
